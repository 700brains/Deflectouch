#:import kivy kivy#:import win kivy.core.window# Background description:<Background>:	source: self.source	allow_stretch: True	keep_ratio: False	size: 1920, 1200# Stock Bar description<Stockbar>:	source: 'graphics/beta/deflector_blue_beta2.png'	allow_stretch: True	keep_ratio: False	size_hint: None, None    pos: self.pos    size: self.max_stock, 20        Image:        source: 'graphics/beta/stock_bar_limiter_l_beta.png'        size_hint: None, None        size: 51, 51        y: root.center_y - self.height/2        right: root.x        Image:        source: 'graphics/beta/stock_bar_limiter_r_beta.png'        size_hint: None, None        size: 51, 51        y: root.center_y - self.height/2        x: root.x + root.max_stock# Tank description:<Tank>:	tank_tower_scatter: tank_tower_scatter	tank_image_source: root.tank_image_source	tower_image_source: root.tower_image_source	# I want the tank image to be the bounding box:	#size: tank_image.size	size: 92, 149		Image:		id: 'tank_image'		source: root.tank_image_source		size: 92, 149		pos: root.pos		Scatter:		id: tank_tower_scatter		size_hint: None, None		size: 196, 76		center: root.center		do_rotation: False		do_scale: False		do_translation: False				Image:			source: root.tower_image_source			size: 196, 76			pos: self.pos
# Deflector description:<Deflector>:	point1: point1	point2: point2	#deflector_line: deflector_line		Image:		id: point1		size: 40/root.scale, 40/root.scale		pos: self.pos		source: 'graphics/beta/finger_point_blue_beta.png'		allow_stretch: True		Image:		id: point2		size: 40/root.scale, 40/root.scale		pos: self.pos		source: 'graphics/beta/finger_point_blue_beta.png'		allow_stretch: True#	Image:#		id: deflector_line#		allow_stretch: True#		keep_ratio: False#		#		canvas:#			BorderImage:#	            source: 'graphics/beta/deflector_blue_beta.png'#	            border: 10, 10, 10, 10#	            size: self.width+10*2, self.height+10*2#	            pos: self.x-10, self.y-10# Bullet description:<Bullet>:	source: 'graphics/bullet.png'	size: 35, 35	size_hint: None, None# Setting dialog description<SettingDialog>:    music_slider: music_slider    sound_slider: sound_slider    speed_slider: speed_slider    close_button: close_button    	orientation: 'vertical'	padding: 10	spacing: 10		Label:	    text: 'Music Volume:'	Slider:	    id: music_slider	Widget:        heigth: 5        Label:        text: 'Sound Volume:'    Slider:        id: sound_slider	Widget:        heigth: 5        Label:        text: 'Bullet Speed:'    Slider:        id: speed_slider        range: 1, 10	Widget:	    heigth: 10		BoxLayout:	    spacing: 10			Button:		    text: 'Help'		    bold: True		    on_press: root.display_help_screen()				Button:		    id: close_button            text: 'Close'            bold: True            on_press: root.dismiss_parent()            # Main widget description:<DeflectouchWidget>:	tank: tank	background: background		Background:	    id: background		source: 'graphics/beta/playground_beta.png'		Image:        source: 'graphics/beta/rails_beta.png'        pos: 27, 0        size_hint: None, None        size: 66, 1200		Tank:		id: tank		tank_image_source: 'graphics/beta/tank_beta.png'		tower_image_source: 'graphics/beta/tank_tower_beta.png'		pos: 10, 600		Button:		text: 'Fire'		bold: True		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		top: win.Window.height - 10		on_press: root.fire_button_pressed()		Button:		text: 'Reset'		bold: True		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		top: win.Window.height - 70		on_press: root.reset_button_pressed()		Label:        text: 'Lives: ' + str(root.lives)        bold: True        right: win.Window.width - 10        top: win.Window.height - 90        Button:        text: 'Level ' + str(root.level)        bold: True        size_hint: None, None        size: 100, 50        right: win.Window.width - 10        top: win.Window.height - 160        on_press: root.level_button_pressed()		Button:		text: 'Settings'		bold: True		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		y: 10		on_press: root.settings_button_pressed()					