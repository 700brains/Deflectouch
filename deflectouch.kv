#:import kivy kivy#:import win kivy.core.window# Background description:<Background>:	source: self.source	allow_stretch: True	keep_ratio: False	size: 1920, 1200# Tank description:<Tank>:	tank_tower_scatter: tank_tower_scatter	tank_image_source: root.tank_image_source	tower_image_source: root.tower_image_source	# I want the tank image to be the bounding box:	#size: tank_image.size	size: 92, 149		Image:		id: 'tank_image'		source: root.tank_image_source		size: 92, 149		pos: root.pos		Scatter:		id: tank_tower_scatter		size_hint: None, None		pos: root.x - 50, root.y + 37		do_rotation: False		do_scale: False		do_translation: False				Image:			source: root.tower_image_source			size: 196, 76
# Deflector description:<Deflector>:	point1: point1	point2: point2	#deflector_line: deflector_line		Image:		id: point1		size: 40/root.scale, 40/root.scale		pos: self.pos		source: 'graphics/beta/finger_point_blue_beta.png'		allow_stretch: True		Image:		id: point2		size: 40/root.scale, 40/root.scale		pos: self.pos		source: 'graphics/beta/finger_point_blue_beta.png'		allow_stretch: True#	Image:#		id: deflector_line#		allow_stretch: True#		keep_ratio: False#		#		canvas:#			BorderImage:#	            source: 'graphics/beta/deflector_blue_beta.png'#	            border: 10, 10, 10, 10#	            size: self.width+10*2, self.height+10*2#	            pos: self.x-10, self.y-10# Bullet description:<Bullet>:	source: 'graphics/bullet.png'	size: 35, 35	size_hint: None, None# Main widget description:<DeflectouchWidget>:	tank: tank	level_label: level_label	lives_label: lives_label		fire_button: fire_button	reset_button: reset_button	menu_button: menu_button			Background:		source: 'graphics/beta/playground_beat.png'		Image:        source: 'graphics/beta/rails_beta.png'        pos: 27, 0        size_hint: None, None        size: 66, 1200		Tank:		id: tank		tank_image_source: 'graphics/beta/tank_beta.png'		tower_image_source: 'graphics/beta/tank_tower_beta.png'		pos: 10, 600		Button:		id: fire_button		text: 'Fire'		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		top: win.Window.height - 10		on_press: root.fire_button_pressed()		Button:		id: reset_button		text: 'Reset'		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		top: win.Window.height - 70		on_press: root.reset_button_pressed()		Button:		id: menu_button		text: 'Menu'		size_hint: None, None		size: 100, 50		right: win.Window.width - 10		top: win.Window.height - 130		on_press: root.menu_button_pressed()		Label:		id: level_label		text: 'Level: 1'		right: win.Window.width - 10		top: win.Window.height - 190		Label:		id: lives_label		text: 'Lives: 3'		right: win.Window.width - 10		top: win.Window.height - 250	